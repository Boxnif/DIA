<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_modul_4_k"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.KM.boxnif.dia.Modul_4k">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m4ueberschrift"
        android:id="@+id/ueberschrift"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="26dp"
        android:background="@android:color/background_light"/>
    <Button
        android:id="@+id/ibtn"
        android:text="@string/qest"
        android:background="@android:drawable/checkbox_off_background"
        android:layout_width="24dp"
        android:layout_height="26dp"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="#000000"
        android:layout_below="@+id/ueberschrift"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1"
        android:layout_below="@+id/view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/m4k"
                android:id="@+id/textView1"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ibtn1"/>

            <Button
                android:id="@id/ibtn1"
                android:text="@string/qest"
                android:layout_alignParentEnd="false"
                android:background="@android:drawable/checkbox_off_background"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/textView1"
                android:textSize="18dp"
                android:layout_width="24dp"
                android:layout_height="26dp"/>

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="false"
                android:entries="@array/janein_array"/>
            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#000000"
                android:layout_below="@id/spinner1"
                android:layout_marginBottom="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weiter"
                android:id="@+id/modul_4_button"
                android:layout_below="@id/view1"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
