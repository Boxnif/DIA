<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_registrierung"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.KM.boxnif.dia.Registrierung"
    android:focusable="true" android:focusableInTouchMode="true">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal"
                    android:layout_alignParentStart="true">

                    <RadioButton
                        android:text="Privatperson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/privat"
                        android:checked="true"
                        android:layout_weight="1"
                        android:textSize="18sp"/>

                    <RadioButton
                        android:text="Firma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/firma"
                        android:layout_weight="1"
                        android:textSize="18sp"/>

                </RadioGroup>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:layout_below="@+id/radioGroup"
                    android:background="@android:drawable/editbox_background"/>

                <TextView
                    android:text="Email-Adresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textSize="18sp"
                    android:layout_below="@+id/name"
                    android:textColor="@color/aLitteBlack"/>
                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:background="@android:drawable/editbox_background"
                    android:layout_below="@+id/textView2"/>

                <TextView
                    android:text="Email-Adresse Wiederholen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="18sp"
                    android:layout_below="@+id/email"
                    android:textColor="@color/aLitteBlack"/>
                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailW"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:background="@android:drawable/editbox_background"
                    android:layout_below="@+id/textView3"/>
                <TextView
                    android:text="Passwort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="18sp"
                    android:layout_below="@+id/emailW"
                    android:textColor="@color/aLitteBlack"/>

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:background="@android:drawable/editbox_background"
                    android:layout_below="@+id/textView4"/>
                <TextView
                    android:text="Passwort wiederholen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textSize="18sp"
                    android:layout_below="@+id/password"
                    android:textColor="@color/aLitteBlack"/>
                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/passwordW"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone"
                    android:background="@android:drawable/editbox_background"
                    android:layout_below="@+id/textView5"/>
                <TextView
                    android:text="Anzahl der Lizensen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:textSize="18sp"
                    android:layout_below="@+id/passwordW"
                    android:textColor="@color/aLitteBlack"/>
                <Button
                    android:id="@+id/lizenzButton"
                    android:text="@string/qest"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="false"
                    android:layout_below="@id/passwordW"
                    android:background="@android:drawable/checkbox_off_background"
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:textSize="18dp"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:imeOptions="actionDone"
                    android:background="@android:drawable/editbox_background"
                    android:layout_below="@+id/textView6"
                    android:id="@+id/lizenzen"/>
                <TextView
                    android:text="Preis für die Registrierung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:textSize="18sp"
                    android:layout_below="@+id/lizenzen"
                    android:textColor="@color/aLitteBlack"
                    android:paddingTop="20dp"/>



                <CheckBox
                    android:text="Ich bestätige die AGB gelesen zu haben"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView7"
                    android:id="@+id/agb"/>

                <Button
                    android:text="Registrierung und weiter zum Kauf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loadButton"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/agbButton"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:text="AGB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agbButton"
                    android:layout_alignTop="@+id/agb"
                    android:layout_toEndOf="@+id/agb"
                    android:layout_alignBottom="@+id/agb"
                    android:textSize="10sp"/>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>








</RelativeLayout>
